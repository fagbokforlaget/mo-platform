{
  "name": "@mo-platform/auth",
  "version": "1.0.18",
  "description": "Mo authentication library",
  "main": "dist/moauth.bundle.js",
  "module": "dist/moauth.esm.js",
  "scripts": {
    "build:umd": "webpack --mode production",
    "build:esm": "rollup -c ./rollup.config.mjs",
    "build": "npm run build:umd && npm run build:esm",
    "dev": "webpack --progress --colors --watch --mode=devlopment",
    "test": "mocha --require @babel/register --colors ./test/*.spec.js -r jsdom-global/register",
    "test:watch": "mocha --require @babel/register --colors -w ./test/*.spec.js -r jsdom-global/register",
    "clean": "rimraf dist lib",
    "prepublishOnly": "npm run clean && npm run test && npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "babel-loader": "^9.1.0",
    "chai": "4.3.6",
    "compression-webpack-plugin": "^10.0.0",
    "core-js": "^3.26.0",
    "fetch-mock": "^9.11.0",
    "husky": "^9.1.4",
    "isomorphic-fetch": "^3.0.0",
    "jsdom": "16.5.3",
    "jsdom-global": "3.0.2",
    "mocha": "10.1.0",
    "nock": "^13.2.9",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-node-resolve": "^5.2.0",
    "terser-webpack-plugin": "^5.3.6",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-command": "^0.5.1"
  },
  "keywords": [
    "webpack",
    "es6",
    "starter",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
